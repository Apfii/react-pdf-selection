{
  "name": "react-pdf-selection",
  "version": "0.1.4",
  "description": "Library of React components needed for text and area selections in PDF documents.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copyfiles",
    "copyfiles": "copyfiles --up 1 ./src/style/* ./dist && copyfiles ./package.json ./dist && copyfiles --up 2 ./../../{CHANGELOG.md,LICENSE,README.md} ./dist",
    "dev": "tsc --watch && npm run copyfiles",
    "clean": "rm -rf dist/",
    "start": "npm run watch",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx}",
    "postpublish": "git push origin --all; git push origin --tags",
    "postversion": "npm publish",
    "preversion": "npm run build"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "pdfjs-dist": "2.6.347",
    "react-pointable": "^1.1.1",
    "react-rnd": "^10.1.10"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || >=17.0.0",
    "react-dom": ">=16.8.0 || >=17.0.0"
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.6",
    "@types/pdfjs-dist": "^2.1.7",
    "@types/react": "^16.4.2",
    "@types/react-dom": "^16.4.2",
    "copyfiles": "^2.4.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "typescript": "^4.1.3"
  },
  "author": "Mathias Meuleman <meuleman.mathias@gmail.com>",
  "license": "MIT",
  "keywords": [
    "pdf",
    "selection",
    "highlight",
    "annotator",
    "react",
    "react-component"
  ],
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MathiasMeuleman/react-pdf-selection.git"
  },
  "bugs": {
    "url": "https://github.com/MathiasMeuleman/react-pdf-selection/issues"
  },
  "homepage": "https://github.com/MathiasMeuleman/react-pdf-selection#readme"
}
